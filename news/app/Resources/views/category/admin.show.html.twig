{% extends 'base.html.twig' %}

{% block body %}
    <h1>Category</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Categoryname</th>
                <td>{{ category.categoryName }}</td>
            </tr>
        </tbody>
    </table>

{% for article in category.categoryArticles %}
    <li><a href="{{ path('article_show', { 'id': article.id }) }}">{{article.title}}</a></li>
{% endfor %}



    <ul>
        <li>
            <a href="{{ path('admin_category_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_category_edit', { 'id': category.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
